        </div>
        <div class="contact-form col-md-8 col-xs-12" style="padding:0 2rem">
          <form action="//formspree.io/moralesrichard@live.com" method="POST">
            <input type="text" name="_gotcha" style="display:none" />

            <div class="row" style="margin:0px">
              <div class="form-item col-xs-12 col-sm-6">
                <input type="text" name="First Name" id="first_name" style="max-width:40rem; height:100%" placeholder="First Name">
              </div>
              <div class="form-item col-xs-12 col-sm-6">
                <input type="text" name="Last Name" id="last_name" style="max-width:40rem; height:100%" placeholder="Last Name" />
              </div>
            </div>

            <div class="row" style="margin:0px">
              <div class="form-item col-xs-12 col-sm-6">
                <input type="text" name="_replyto" id="sender_email" style="max-width:40rem; height:100%" placeholder="Email Address">
              </div>
              <div class="form-item col-xs-12 col-sm-6">
                <input type="text" name="Company Name" style="max-width:40rem; height:100%" placeholder="Company Name" />
              </div>
            </div>

            <div class="row" style="margin:0px">
              <div class="form-item col-xs-12">
                <textarea style="max-width:50rem;" id="contact_description" placeholder="Brief description of the project." name="Description" cols="40" rows="6"></textarea>
              </div>
            </div>

            {{!-- <div class="form-action">
              <input class="sendButton" type="submit" value="Send">
            </div> --}}
            <div class="row" style="margin:0px">
              <div style="padding-left:1rem;" class="form-btn" id="website">
